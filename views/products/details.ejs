<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h1><%= product.name %></h1>
    <div>
      <a href="/products/edit/<%= product.id %>" class="btn btn-warning">Modifier</a>
      <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?')">Supprimer</button>
      </form>
    </div>
  </div>
  <div class="card-body">
    <p class="lead">Prix: <%= Number(product.price).toFixed(2) %> €</p>
    <p><strong>Description:</strong></p>
    <p><%= product.description %></p>
    <p><small class="text-muted">Créé le: <%= new Date(product.created_at).toLocaleString() %></small></p>
  </div>
  <div class="card-footer">
    <a href="/products" class="btn btn-secondary">Retour à la liste</a>
  </div>
</div>