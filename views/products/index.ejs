<h1>Liste des produits</h1>

<a href="/products/create" class="btn btn-primary mb-3">Ajouter un produit</a>

<% if (products.length === 0) { %>
  <div class="alert alert-info">Aucun produit disponible.</div>
<% } else { %>
    

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nom</th>
          <th>Prix</th>
          <th>Date de création</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= Number(product.price).toFixed(2) %> €</td>
            <td><%= new Date(product.created_at).toLocaleDateString() %></td>
            <td>
              <a href="/products/<%= product.id %>" class="btn btn-sm btn-info">Voir</a>
              <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-warning">Modifier</a>
              <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?')">Supprimer</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
<% } %>